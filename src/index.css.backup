@tailwind base;
@tailwind components;
@tailwind utilities;

/* Definition of the design system. All colors, gradients, fonts, etc should be defined here. 
All colors MUST be HSL.
*/

@layer base {
  :root {
    /* Elegant Color Palette */
    --background: 222 15% 8%;
    --foreground: 218 15% 92%;

    --card: 222 15% 10%;
    --card-foreground: 218 15% 90%;

    --popover: 222 15% 10%;
    --popover-foreground: 218 15% 90%;

    --primary: 210 85% 65%;
    --primary-foreground: 222 15% 8%;
    --primary-glow: 210 85% 75%;
    --primary-dark: 210 85% 50%;

    --secondary: 222 15% 18%;
    --secondary-foreground: 218 15% 85%;

    --muted: 222 15% 15%;
    --muted-foreground: 218 15% 65%;

    --accent: 350 85% 65%;
    --accent-foreground: 222 15% 8%;
    --accent-glow: 350 85% 75%;

    --destructive: 0 84% 60%;
    --destructive-foreground: 220 10% 95%;

    --border: 220 15% 20%;
    --input: 220 15% 15%;
    --ring: 266 100% 70%;

    --success: 142 76% 36%;
    --warning: 38 92% 50%;
    --info: 199 89% 48%;

    --radius: 0.75rem;

    /* Elegant Gradients */
    --gradient-primary: linear-gradient(
      135deg,
      hsl(var(--primary)),
      hsl(var(--primary-dark))
    );
    --gradient-secondary: linear-gradient(
      135deg,
      hsl(var(--secondary)),
      hsl(var(--muted))
    );
    --gradient-hero: linear-gradient(
      135deg,
      hsl(210 85% 65%),
      hsl(350 85% 65%)
    );
    --gradient-glass: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.08),
      rgba(255, 255, 255, 0.03)
    );
    --gradient-mesh:
      radial-gradient(
        at 30% 40%,
        hsla(210, 85%, 65%, 0.15) 0px,
        transparent 50%
      ),
      radial-gradient(
        at 80% 20%,
        hsla(350, 85%, 65%, 0.12) 0px,
        transparent 50%
      ),
      radial-gradient(at 40% 80%, hsla(230, 50%, 70%, 0.1) 0px, transparent 50%);

    /* Refined Shadows */
    --shadow-soft: 0 4px 20px hsl(var(--primary) / 0.15);
    --shadow-glass: 0 8px 32px 0 rgba(15, 23, 42, 0.25);
    --shadow-elevated: 0 20px 40px -12px rgba(0, 0, 0, 0.18);
    --shadow-subtle: 0 2px 10px hsl(var(--accent) / 0.12);

    /* Advanced Effects */
    --blur-glass: blur(8px);
    --blur-backdrop: blur(16px);

    --sidebar-background: 0 0% 98%;
    --sidebar-foreground: 240 5.3% 26.1%;
    --sidebar-primary: 240 5.9% 10%;
    --sidebar-primary-foreground: 0 0% 98%;
    --sidebar-accent: 240 4.8% 95.9%;
    --sidebar-accent-foreground: 240 5.9% 10%;
    --sidebar-border: 220 13% 91%;
    --sidebar-ring: 217.2 91.2% 59.8%;
  }

  .light {
    --background: 220 15% 97%;
    --foreground: 220 10% 8%;

    --card: 220 15% 100%;
    --card-foreground: 220 10% 8%;

    --popover: 220 15% 100%;
    --popover-foreground: 220 10% 8%;

    --primary: 266 100% 60%;
    --primary-foreground: 220 10% 95%;
    --primary-glow: 266 100% 75%;
    --primary-dark: 266 100% 45%;

    --secondary: 220 15% 94%;
    --secondary-foreground: 220 10% 10%;

    --muted: 220 15% 96%;
    --muted-foreground: 220 10% 45%;

    --accent: 310 100% 60%;
    --accent-foreground: 220 10% 95%;
    --accent-glow: 310 100% 75%;

    --destructive: 0 84% 50%;
    --destructive-foreground: 220 10% 95%;

    --border: 220 15% 88%;
    --input: 220 15% 92%;
    --ring: 266 100% 60%;

    --gradient-mesh:
      radial-gradient(
        at 40% 20%,
        hsla(266, 100%, 60%, 0.2) 0px,
        transparent 50%
      ),
      radial-gradient(
        at 80% 0%,
        hsla(310, 100%, 60%, 0.2) 0px,
        transparent 50%
      ),
      radial-gradient(at 0% 50%, hsla(199, 89%, 48%, 0.2) 0px, transparent 50%);
  }

  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;
    --card: 222.2 84% 4.9%;
    --card-foreground: 210 40% 98%;
    --popover: 222.2 84% 4.9%;
    --popover-foreground: 210 40% 98%;
    --primary: 210 40% 98%;
    --primary-foreground: 222.2 47.4% 11.2%;
    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;
    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 212.7 26.8% 83.9%;
    --sidebar-background: 240 5.9% 10%;
    --sidebar-foreground: 240 4.8% 95.9%;
    --sidebar-primary: 224.3 76.3% 48%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 240 3.7% 15.9%;
    --sidebar-accent-foreground: 240 4.8% 95.9%;
    --sidebar-border: 240 3.7% 15.9%;
    --sidebar-ring: 217.2 91.2% 59.8%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground font-sans;
    background-image: var(--gradient-mesh);
    background-attachment: fixed;
    font-feature-settings: "cv11", "ss01";
    font-variation-settings: "opsz" 32;
  }
}

@layer components {
  /* Refined Glass Morphism */
  .glass-card {
    @apply relative overflow-hidden rounded-xl;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.06),
      rgba(255, 255, 255, 0.02)
    );
    backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.12);
    box-shadow: var(--shadow-glass);
  }

  .glass-card::before {
    @apply absolute inset-0 -z-10;
    content: "";
    background: var(--gradient-mesh);
    opacity: 0.2;
  }

  /* Elegant Card Gradient */
  .card-gradient {
    @apply relative overflow-hidden rounded-xl border;
    background: linear-gradient(
      135deg,
      hsl(var(--card)) 0%,
      hsl(var(--card) / 0.95) 100%
    );
    backdrop-filter: blur(8px);
    border-color: rgba(255, 255, 255, 0.08);
    box-shadow: var(--shadow-soft);
  }

  /* Hero Gradient Text */
  .brand-gradient {
    @apply font-display font-black;
    background: var(--gradient-hero);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-shift 3s ease infinite;
  }

  /* Shimmer Effect */
  .shimmer {
    @apply relative overflow-hidden;
  }

  .shimmer::before {
    @apply absolute inset-0;
    content: "";
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.4),
      transparent
    );
    animation: shimmer 2s infinite;
  }

  /* Refined Buttons */
  .hero-button {
    @apply relative overflow-hidden font-display font-semibold;
    background: var(--gradient-primary);
    box-shadow: var(--shadow-soft);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-button:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-elevated);
  }

  /* Advanced Animations */
  .floating-enhanced {
    animation: float 6s ease-in-out infinite;
  }

  .glow-pulse {
    animation: pulse-glow 2s ease-in-out infinite;
  }

  .slide-in-up {
    animation: fade-up 0.6s ease-out;
  }

  .fade-in {
    animation: fade-in 0.4s ease-out;
  }

  .bounce-in {
    animation: bounce-in 0.6s ease-out;
  }

  /* Refined Quiz Elements */
  .quiz-option {
    @apply relative overflow-hidden rounded-xl border transition-all duration-300;
    background: linear-gradient(
      135deg,
      hsl(var(--card)) 0%,
      hsl(var(--muted) / 0.2) 100%
    );
    backdrop-filter: blur(8px);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .quiz-option:hover {
    @apply border-accent/50;
    transform: translateY(-2px);
    box-shadow: var(--shadow-subtle);
  }

  .success-gradient {
    background: linear-gradient(135deg, hsl(var(--success)), #4ade80);
    box-shadow: 0 10px 30px -10px hsl(var(--success) / 0.5);
  }

  .error-gradient {
    background: linear-gradient(135deg, hsl(var(--destructive)), #f87171);
    box-shadow: 0 10px 30px -10px hsl(var(--destructive) / 0.5);
  }

  .button-glow {
    box-shadow: 0 0 20px currentColor;
  }

  /* Timer Effects */
  .timer-warning {
    animation: pulse-glow 1s ease-in-out infinite;
  }

  .pulse-ring {
    @apply relative;
  }

  .pulse-ring::before {
    @apply absolute inset-0 rounded-xl;
    content: "";
    background: hsl(var(--primary) / 0.2);
    animation: pulse 2s infinite;
  }

  /* Floating Animation */
  .floating {
    animation: float 4s ease-in-out infinite;
  }

  /* Stagger Animation */
  .stagger-children > * {
    animation: fade-up 0.6s ease-out backwards;
  }

  .stagger-children > *:nth-child(1) {
    animation-delay: 0.1s;
  }
  .stagger-children > *:nth-child(2) {
    animation-delay: 0.2s;
  }
  .stagger-children > *:nth-child(3) {
    animation-delay: 0.3s;
  }
  .stagger-children > *:nth-child(4) {
    animation-delay: 0.4s;
  }
}

/* Scrollbar Styling */
::-webkit-scrollbar {
  @apply w-2;
}

::-webkit-scrollbar-track {
  @apply bg-muted;
}

::-webkit-scrollbar-thumb {
  @apply bg-accent rounded-full;
}

::-webkit-scrollbar-thumb:hover {
  @apply bg-accent-glow;
}
